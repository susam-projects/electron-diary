{
  "compilerOptions": {
    "allowJs": true,
    "module": "es6",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "lib": [ "es7", "dom" ],
    "target": "es6",
    "jsx": "react",
    "pretty": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "downlevelIteration": true,
    "importHelpers": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.test.*"
  ]
}
